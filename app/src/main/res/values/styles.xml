<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App_brief">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="question_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/main_layout</item>
        <item name="android:layout_above">@id/start_quiz_button</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">88dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/choicesText</item>
    </style>

    <style name="question_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/capital</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="question_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/choicesText</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80sp</item>
        <item name="android:backgroundTint">@color/choicesText</item>
        <item name="android:textColor">@color/choicesText</item>
    </style>
</resources>
